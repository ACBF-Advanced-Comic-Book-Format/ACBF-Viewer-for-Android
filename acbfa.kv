        markup: True
        color: 1,1,0,1
        size_hint_y: 1
        text_size: self.size
        halign: 'left'
        valign: 'top'

    Widget:
        name: 'progress_bar'
        size_hint: 0, None
        height: 3
        canvas.after:
            Color:
                rgba: 1,0.5,0,1
            Rectangle:
                pos: self.pos
                size: self.size

<ComicBookLibrary>:
    icon_set: 'Default'
    on_dismiss: self.close_dialog()
    lib_layout: lib_layout

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size: self.size
            height: root.height * 0.05
            width: root.width
            canvas:
                Color:
                    rgba: 1, 1, 1, 0.1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                size_hint: 0.5, 1
                text: '  Comic Book Library'
                text_size: self.size
                max_lines: 1
                bold: True
                markup: True
                valign: 'middle'
                halign: 'left'

            Button:
                id: settings_button
                size_hint: None, 1
                width: self.size[1]
                valign: 'middle'
                background_normal: './images/' + root.icon_set + '/ic_action_settings1.png'
                background_down: './images/' + root.icon_set + '/ic_action_settings.png'
                border: 0, 0, 0, 0
                on_release: app.open_settings()

        ScrollView:
            id: library
            size_hint: None, None
            size: self.size
            height: root.height * 0.95
            width: root.width

            GridLayout:
                id: lib_layout
                width: self.parent.width
                height: self.parent.height
                size_hint_y: None
                cols: root.cols
                col_default_width: (self.width / root.cols) - (20 / root.cols) - 10
                col_force_default: True
                spacing: 10, 10
                padding: 20
                canvas.before:
                    Color:
                        rgba: 0.1, 0.1, 0.1, 0.1
                    Rectangle:
                        pos: self.pos
                        size: self.size

    Label:
        id: exit_notif
        opacity: 0
        color: 1,1,1,1
        text: ' Press again to exit '
        size_hint: None, None
        size: self.texture_size[0] * 1.2, self.texture_size[1] * 1.2
        pos: root.pos[0] + (root.width / 2) - self.width / 2, root.pos[1] + (root.height / 2) - self.height / 2
        center: self.parent.center
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.7
            Rectangle:
                pos: self.pos
                size: self.size


<ScatterBackGroundImage>:
    icon_set: 'Default'
    on_size: root.reposition('move')
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    Scatter:
        id: scatter2
        do_rotation: False
        auto_bring_to_front: False
        size_hint: None, None
        size: blend_image.size

        Image:
            id: blend_image
            bg_color: 1, 1, 1, 0
            size: self.texture_size
            nocache: True
            color: root.image_color

    Scatter:
        id: scatter
        do_rotation: False
        auto_bring_to_front: False
        size_hint: None, None
        size: bg_image.size
        on_scale: if root.zoom_level == 2: root.calculate_zoom_width_top()

        Image:
            id: bg_image
            bg_color: 1, 1, 1, 0
            size: self.texture_size
            nocache: True
            color: root.image_color

    Slider:
        id: slider
        min: 1
        max: root.pages_total + 1
        step: 1
        value: 1
        pos: 0, root.height + 10
        size_hint_y: None
        height: root.height / 10
        on_touch_up: root.slide_to_page(self.value)
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.5
            Rectangle:
                pos: self.pos
                size: self.size

    Image:
        id: loading_image
        bg_color: 1, 1, 1, 1
        size_hint: None, None
        size: self.texture_size
        pos: root.pos[0] + root.width - 150, root.pos[1] + 150 - self.height
        #pos: root.pos[0] + (root.width / 2) - self.width / 2, root.pos[1] + (root.height / 2) - self.height / 2
        source: './images/ic_action_refresh_light.png'
        opacity: 0

    Label:
        id: last_page_notif
        opacity: 0
        color: 1,1,1,1
        text: ' Last page reached '
        size_hint: None, None
        size: self.texture_size[0] * 1.2, self.texture_size[1] * 1.2
        pos: root.pos[0] + (root.width / 2) - self.width / 2, root.pos[1] + (root.height / 2) - self.height / 2
        center: self.parent.center
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.7
            Rectangle:
                pos: self.pos
                size: self.size

    Label:
        id: exit_notif
        opacity: 0
        color: 1,1,1,1
        text: ' Press again to exit '
        size_hint: None, None
        size: self.texture_size[0] * 1.2, self.texture_size[1] * 1.2
        pos: root.pos[0] + (root.width / 2) - self.width / 2, root.pos[1] + (root.height / 2) - self.height / 2
        center: self.parent.center
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.7
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        id: toolbar
        orientation: 'horizontal'
        size_hint: 1, None
        size: root.width, root.width / 8
        pos: 0, root.height + 10 # - self.height
        canvas:
            Color:
                rgba: 0, 0, 0, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: lib_button
            size_hint: 1, 1
            background_normal: './images/' + root.icon_set + '/ic_action_collection1.png'
            background_down: './images/' + root.icon_set + '/ic_action_collection.png'
            border: 0, 0, 0, 0
            on_release: root.show_library()
        Button:
            size_hint: 1, 1
            background_normal: './images/' + root.icon_set + '/ic_action_settings1.png'
            background_down: './images/' + root.icon_set + '/ic_action_settings.png'
            border: 0, 0, 0, 0
            on_release: app.open_settings()
        Button:
            size_hint: 1, 1
            background_normal: './images/' + root.icon_set + '/ic_action_previous1.png'
            background_down: './images/' + root.icon_set + '/ic_action_previous.png'
            border: 0, 0, 0, 0
            on_release: root.first_page()
        Button:
            size_hint: 1, 1
            background_normal: './images/' + root.icon_set + '/ic_action_previous_item1.png'
            background_down: './images/' + root.icon_set + '/ic_action_previous_item.png'
            border: 0, 0, 0, 0
            on_release: root.prev_page()
        Button:
            id: page_number_label
            text: str(int(slider.value))
            size: self.texture_size
            background_normal: './images/blank.png'
            background_down: './images/blank.png'
            border: 0, 0, 0, 0
            on_release: root.show_contents()
        Button:
            size_hint: 1, 1
            background_normal: './images/' + root.icon_set + '/ic_action_next_item1.png'
            background_down: './images/' + root.icon_set + '/ic_action_next_item.png'
            border: 0, 0, 0, 0
            on_release: root.next_page()
        Button:
            size_hint: 1, 1
            background_normal: './images/' + root.icon_set + '/ic_action_next1.png'
            background_down: './images/' + root.icon_set + '/ic_action_next.png'
            border: 0, 0, 0, 0
            on_release: root.last_page()
        Button:
            id: text_layer_label
            text: '??#'
            size: self.texture_size
            background_normal: './images/blank.png'
            background_down: './images/blank.png'
            border: 0, 0, 0, 0
            on_release: root.change_layer()
        Button:
            size_hint: 1, 1
            background_normal: './images/' + root.icon_set + '/ic_action_search1.png'
            background_down: './images/' + root.icon_set + '/ic_action_search.png'
            border: 0, 0, 0, 0
            on_release: root.zoom_page()

