<ContentsDialog>
    id: contents_dialog
    size_hint: 0.8, 0.7
    title: 'Table of Contents'
    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None
            id: contents_items
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size

<LayersDialog>
    id: layers_dialog
    size_hint: 0.5, 0.5
    title: 'Language layers'
    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None
            id: layer_items
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size

<ComicBookDialog>
    book_path: ''
    icon_set: 'Default'
    button_pressed: 'ok'
    size_hint: 0.8, 0.8
    BoxLayout:
        id: open_book_dialog
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            AnchorLayout:
                id: dialog_left
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint_x: None
                width: self.parent.width * 0.3
                canvas.before:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Image:
                    id: cover_image
                    no_cache: True
                    size_hint: None, None
                    size: self.parent.width * 0.9, self.parent.width * 1.35
                    allow_stretch: True
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
            BoxLayout:
                id: dialog_right
                size_hint_x: None
                width: self.parent.width * 0.7
                ScrollView:
                    canvas.before:
                        Color:
                            rgba: 0.1, 0.1, 0.1, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        id: comic_metadata
                        markup: True
                        padding: self.width / 50, self.height / 50
                        line_height: 1.2
                        text_size: self.width, None
                        size_hint_y: None
                        height: self.texture_size[1]
        FloatLayout:
            size_hint_y: None
            height: self.parent.height / 8
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                id: open_button
                size_hint_x: None
                width: self.parent.height
                pos: self.parent.pos[0] + self.parent.width - self.width, self.parent.pos[1]
                background_normal: './images/' + root.icon_set + '/ic_action_collection1.png'
                background_down: './images/' + root.icon_set + '/ic_action_collection.png'
                border: 0, 0, 0, 0
                on_release: root.button_pressed = 'open'; root.dismiss()
            Button:
                id: dismiss_button
                size_hint_x: None
                width: self.parent.height
                #pos: self.parent.pos[0] + (self.parent.width / 2) - self.width / 2, self.parent.pos[1]
                pos: root.pos
                background_normal: './images/' + root.icon_set + '/ic_action_undo1.png'
                background_down: './images/' + root.icon_set + '/ic_action_undo.png'
                border: 0, 0, 0, 0
                on_release: root.button_pressed = 'dismiss'; root.dismiss()
            Button:
                id: remove_button
                size_hint_x: None
                width: self.parent.height
                #pos: self.parent.pos
                pos: root.pos[0] + (root.width / 2) - self.width / 2, root.pos[1]
                background_normal: './images/' + root.icon_set + '/ic_action_discard1.png'
                background_down: './images/' + root.icon_set + '/ic_action_discard.png'
                border: 0, 0, 0, 0
                on_release: root.button_pressed = 'remove'; root.dismiss()

<LoadingBookDialog>
    book_path: ''
    size_hint: 0.5, 0.3
    title: 'Loading Comic Book ...'
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: root.book_path
                text_size: self.parent.size
                valign: 'middle'
                halign: 'center'
        BoxLayout:
            size_hint: 0.9, 0.2
            pos_hint: {'x': 0.05}
            ProgressBar:
                id: loading_progress_bar

<RemoveBookDialog>
    button_pressed: 'ok'
    book_path: ''
    size_hint: 0.5, 0.5
    title: 'Remove Book'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Are you sure you want to remove this book? Book will be deleted from device.\n' + root.book_path
                text_size: self.parent.size
                valign: 'middle'
                halign: 'center'
        BoxLayout:
            size_hint_y: 0.2
            Button:
                id: no_button
                text: 'KEEP'
                on_release: root.button_pressed = 'keep'; root.dismiss()
            Button:
                id: yes_button
                text: 'REMOVE'
                on_release: root.button_pressed = 'remove'; root.dismiss()

<ErrorDialog>
    size_hint: 0.5, 0.5
    title: 'Error'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                id: label_text
                text: ''
                text_size: self.parent.size
                valign: 'middle'
                halign: 'center'
        BoxLayout:
            size_hint_y: 0.2
            Button:
                id: ok_button
                text: 'OK'
                on_release: root.dismiss()

<Cover>
    anchor_x: 'left'
    anchor_y: 'bottom'
    size_hint_y: None
